<%= form_with model: @user do |form| %>

    <% @user.errors.full_messages.each do |error| %>
        <div style="color: red;">
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :email %>
        <%=
            form.email_field :email,
            requited: true
        %>
    </div>

    <div>
        <%= form.label :username %>
        <%=
            form.text_field :username,
            requited: true
        %>
    </div>

    <div>
        <%= form.label :password %>
        <%=
            form.password_field :password,
            required: true
        %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>